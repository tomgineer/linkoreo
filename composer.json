{
    "name": "tomgineer/linkoreo",
    "description": "Bookmark Manager",
    "license": "MIT",
    "authors": [
        {
            "name": "Tom Papatolis",
            "email": "tom@tpapatolis.com",
            "homepage": "https://tpapatolis.com"
        }
    ],
    "type": "project",
    "homepage": "https://github.com/tomgineer",
    "support": {
        "source": "https://github.com/tomgineer/linkoreo"
    },
    "require": {
        "php": "^8.2",
        "codeigniter4/framework": "4.6.*"
    },
    "require-dev": {
        "fakerphp/faker": "^1.9",
        "mikey179/vfsstream": "^1.6",
        "phpunit/phpunit": "^10.5.16"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/",
            "Config\\": "app/Config/"
        },
        "exclude-from-classmap": [
            "**/Database/Migrations/**"
        ]
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    }
}
